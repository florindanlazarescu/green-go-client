<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GreenGoClient" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryVariant">#388E3C</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#81C784</item>
        <item name="colorSecondaryVariant">#388E3C</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Application background color -->
        <item name="android:windowBackground">#F5F5F5</item>

        <!-- Dynamic title support -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#4CAF50</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_greengo</item>
        <item name="postSplashScreenTheme">@style/Theme.GreenGoClient</item>
    </style>
</resources>
